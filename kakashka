    <script>
        function showPage(pageId) {
            // –°–∫—Ä—ã—Ç—å –≤—Å–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
            document.getElementById(pageId + '-page').classList.add('active');
            
            // –û–±–Ω–æ–≤–∏—Ç—å –∞–∫—Ç–∏–≤–Ω—É—é –∫–Ω–æ–ø–∫—É –≤ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            document.querySelectorAll('nav a').forEach(link => {
                link.classList.remove('active');
            });
            
            // –ù–∞–π—Ç–∏ –∏ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â—É—é –∫–Ω–æ–ø–∫—É
            const links = document.querySelectorAll('nav a');
            for (let link of links) {
                if (link.textContent.toLowerCase().includes(pageId) || 
                    (pageId === 'main' && link.textContent === '–ì–ª–∞–≤–Ω–∞—è')) {
                    link.classList.add('active');
                    break;
                }
            }
            
            // –û–±–Ω–æ–≤–∏—Ç—å URL
            const newUrl = window.location.origin + window.location.pathname + '#' + pageId;
            window.history.pushState({}, '', newUrl);
            
            // –ü—Ä–æ–∫—Ä—É—Ç–∏—Ç—å –∫ –≤–µ—Ä—Ö—É
            window.scrollTo(0, 0);
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ö—ç—à–∞ –≤ URL
        function handleHashChange() {
            const hash = window.location.hash.substring(1);
            if (hash) {
                showPage(hash);
            } else {
                showPage('main');
            }
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.addEventListener('load', function() {
            handleHashChange();
        });

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ö—ç—à–∞
        window.addEventListener('hashchange', handleHashChange);
    </script>
